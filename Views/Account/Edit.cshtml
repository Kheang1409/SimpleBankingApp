@model SimpleBankingApp.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for AccountId -->
            <input type="hidden" asp-for="AccountId" />

            <!-- AccountType dropdown with "Savings" and "Checking" options -->
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" class="form-control">
                    <option value="">Please select an account type</option>
                    <option value="Savings">Savings</option>
                    <option value="Checking">Checking</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>

            <!-- Balance input with validation -->
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" type="number" step="0.01" min="0"
                    value="@Model.Balance" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <!-- CustomerId dropdown populated from ViewBag -->
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                    <option value="0">Please select a customer</option>
                    <!-- Default option to ensure it doesn't get submitted -->
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>